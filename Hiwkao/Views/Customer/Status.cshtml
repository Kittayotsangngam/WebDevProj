@model IEnumerable<SampleLogin.Models.Order>;
@using Microsoft.AspNetCore.Identity
@using SampleLogin.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;

}
<link rel="stylesheet" type="text/css" href="~/css/Import.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<style>

    body {
        background-image: url("https://cdn.discordapp.com/attachments/874217207360520203/1101567480050237621/0f024adf359d7b313e9e8c2472a0109c.jpg");
        background-size: cover;
        backdrop-filter: blur(150px);
        background-repeat: repeat;
    }

    .main {
        display: flex;
        flex-wrap: wrap;
        justify-content: start;
    }

    .card {
        padding: 3rem 0.5rem;
        margin-bottom: 3%;
        margin-left: 8%;
        width: 16%;
        background-color: rgba(35, 43, 43, 0.35);
        border-radius: 40px;
        border: none;
        box-shadow: 0px 0px 20px rgba(0,0,0, 0.3);
    }

        .card .center {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

    h1 {
        text-align: right;
        margin: 0 5% 3% 0;
    }

    h4 {
        text-align: center;
    }

    .card .center img {
        border-radius: 20px;
        width: 80%;
        height: 60%;
    }

    .card:hover {
        box-shadow: 0px 0px 30px rgba(192,192,192, 0.5);
        background-color: rgba(0, 26, 0,0.2)
    }

    .button {
        display: flex;
        transform: scale(1.5);
        flex-direction: row;
        align-items: center;
        background-color: green;
        color: white;
        border-radius: 20px;
        padding: 0.35rem 2.5rem;
        text-decoration: none;
    }

        .button i {
            margin: 0.1rem;
        }

        .button:hover {
            transform: scale(1.3);
            background-color: black;
            color: white;
            box-shadow: 0px 0px 20px rgba(0,0,0, 0.5);
        }

    .row .widtho {
        width: 3%;
        background: rgba(0,0,0, 0.2);
        margin: auto 0;
        opacity: 50%;
        height: 50vh;
        display: flex;
        justify-content: center;
        align-content: center;
        margin-right: 7%;
        border-radius: 20px;
    }

        .row .widtho .nav .nav-item {
            width: 100%;
            height: 20%;
            background-color: transparent;
        }

    .nav-link {
        color: black;
    }



    @@media (max-width: 1023px;) {
        body {
            background-image: url("https://i.pinimg.com/564x/0f/02/4a/0f024adf359d7b313e9e8c2472a0109c.jpg");
            background-size: contain;
            backdrop-filter: blur(70px);
        }

        .main {
            display: flex;
            flex-direction: column;
        }

        .card {
            width: 80%;
        }
    }

    ion-icon {
        color: white;
        display: flex;
    }

        ion-icon:hover {
            color: black;
            transform: scale(1.5);
        }

        ion-icon.black-icon {
            color: black;
            transform: scale(1.5);
            background-color: white;
            border-radius: 5px;
        }
</style>
<body>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <div class="row">
        <div class="col-md-3 widtho">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Index"><ion-icon size="large" name="bag-check-outline"></ion-icon></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Order"><ion-icon  size="large" name="bag-check-outline"></ion-icon></a></li>
                <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Status"><ion-icon class="black-icon"  size="large" name="fast-food-outline"></ion-icon></a></li>

                <li class="nav-item">
                    <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><ion-icon size="large" name="restaurant-outline"></ion-icon></a>
                </li>

                <li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><ion-icon size="large" name="bag-check-outline"></ion-icon></button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <div class="main">
                <div class="head">Status</div>
                @foreach (var order in Model)
                {
                    if (order.Status == "Ongoing" || order.Status == "Arrive")
                    {
                        <div class="card">
                            <div class="center">
                                <div class="coll">
                                    <div class="roww text-center">
                                        <h4>Order ID : @order.OrderId</h4>

                                    </div>
                                    <div class="roww text-center">
                                        <img src="https://s359.thaibuffer.com/rq/580/435/50/pagebuilder/dbc77e85-1cb6-44ff-a3d8-dc6b21f59d5a.jpg">
                                    </div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        var menu = (string)typeof(Order).GetProperty("Menu" + i).GetValue(order);
                                        var amount = (int)typeof(Order).GetProperty("Amount" + i).GetValue(order);
                                        if (amount > 0)
                                        {

                                            <div class="roww">
                                                <h4>เมนู : @menu</h4>
                                                <h4>จำนวน : @amount</h4>
                                            </div>



                                        }
                                    }
                                    <div class="roww">
                                        <h4>ที่รับ : @order.Destination</h4>
                                        <h4>ชื่อ Rider : @UserManager.GetUserAsync(User).Result.FirstName @UserManager.GetUserAsync(User).Result.LastName</h4>
                                    </div>
                                    @if (order.Status == "Arrive")
                                    {
                                        <a>Your rider arrive at destinatino</a>
                                        <p>@order.Confirmation / 2 Waiting for customer comfirmation</p>
                                        <a class="btn btn-danger" asp-controller="Customer" asp-action="Finish" asp-route-id="@order.OrderId">เสร็จสิ้น</a>

                                    }
                                    else if (order.Status == "Canceling")
                                    {
                                        <a>Your rider want to cancel this order</a>
                                        <p>@order.Confirmation / 2 Waiting for customer comfirmation</p>
                                        <a class="btn btn-danger" asp-controller="Customer" asp-action="Cancel" asp-route-id="@order.OrderId">Yes</a>

                                    }

                                </div>


                            </div>
                        </div>
                        <br />
                    }
                }



            </div>
        </div>
    </div>

</body>

