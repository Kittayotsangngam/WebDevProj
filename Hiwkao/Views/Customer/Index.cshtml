@{
}
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" type="text/css" href="~/css/Import.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
<style>

    body {
        background-image: url("https://i.pinimg.com/564x/0f/02/4a/0f024adf359d7b313e9e8c2472a0109c.jpg");
        background-size: contain;
        backdrop-filter: blur(70px);
        background-repeat: repeat;
    }

    .main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        padding: 3rem 0.5rem;
        margin-bottom: 3%;
        width: 60%;
        height: 80%;
        background-color: rgba(198, 198, 198, 0.15);
        background-size: 0px;
        border-radius: 40px;
    }

        .card .center {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

    h3 {
        text-align: center;
        color: black;
        background-color: rgb(197, 254, 197);
        border-radius: 20px;
        padding: 0.8rem 3rem;
    }

    h4 {
        text-align: center;
    }

    .card .center img {
        border-radius: 50%;
        width: 40%;
        height: 60%;
    }

    .button {
        display: flex;
        flex-direction: row;
        align-items: center;
        background-color: red;
        color: white;
        border-radius: 10px;
        padding: 0.35rem 2.5rem;
        text-decoration: none;
    }

        .button i {
            margin: 0.1rem;
        }

</style>
<body>
    <div class="main">

        @foreach (var order in Model)
        {
            <div class="card">

                <div class="center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        var menu = (string)typeof(Order).GetProperty("Menu" + i).GetValue(order);
                        var amount = (int)typeof(Order).GetProperty("Amount" + i).GetValue(order);
                        if (amount > 0)
                        {
                            <h3>Order</h3>
                            <h4>เมนู : @menu</h4>
                            <h4>จำนวน : @amount</h4>
                        }
                    }
                    <h4>สนานที่รับ : @order.Destination</h4>
                    <a class='button' asp-controller="Customer" asp-action="Cancel" asp-route-id="@order.OrderId"><i class="bi bi-x-circle"></i>Cancel</a>
                </div>
            </div>
            <br />
        }

    </div>
</body>



